{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "..",
    "module": "CommonJS",
    "target": "es2022",
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "lib/**/*.js",
    "lib/**/*.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["index.ts"],
    "out": "./docs",
    "excludePrivate": true,
    "excludeProtected": true,
    "includeVersion": true,
    "skipErrorChecking": true
  }
}
